<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="dashboard" name="Student Portal">

		<head>
			<meta charset="UTF-8" />
			<meta name="viewport" content="width=device-width, initial-scale=1.0" />
			<script src="https://cdn.tailwindcss.com" />
			<link rel="stylesheet" href="/hl_base/static/src/css/style.css"/>
		</head>
		<body>
			<t t-call="hl_base.mobile_sidebar"/>
			<t t-call="hl_base.sidebar"/>
			<div>
				<div class="flex flex-1 flex-col md:pl-64">
					<div class="sticky top-0 z-10 flex h-16 flex-shrink-0 bg-white shadow">
						<button id="openSidebar" type="button" class="border-r border-gray-200 px-4 text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-500 md:hidden">
							<span class="sr-only">Open sidebar</span>
							<!-- Heroicon name: outline/bars-3-bottom-left -->
							<svg class="h-6 w-6"
								xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
							</svg>
						</button>

					</div>

					<main>
						<t t-if="student.applications">
							<div id="applicationList" class="py-6">
								<div id="applicationsList" class="px-4 sm:px-6 lg:px-8">
									<div class="sm:flex sm:items-center">
										<div class="sm:flex-auto">
											<h1 class="text-xl font-semibold text-gray-900">Applications</h1>
											<!-- <p class="mt-2 text-sm text-gray-700">A list of all the users in your account including their name, title, email and role.</p> -->
										</div>
										<div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
											<a t-att-href="'/' + agent.subdomain + '/application'" t-att-class="'inline-flex items-center justify-center rounded-md border border-transparent bg-' + agent.agent_color + '-' + agent.agent_shade + ' px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-' + agent.agent_color + '-' + agent.agent_secondary_shade + ' focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 sm:w-auto'">New Application</a>
										</div>
									</div>
									<div class="mt-8 flex flex-col">
										<div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
											<div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
												<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
													<table class="min-w-full divide-y divide-gray-300">
														<thead class="bg-gray-50">
															<tr>
																<th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
																<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Created On</th>
																<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
																<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
																	<span class="sr-only">Action</span>
																</th>
															</tr>
														</thead>
														<tbody id="applicationListBody" class="divide-y divide-gray-200 bg-white">
															<t t-foreach = "student.applications" t-as = "application">
																<tr>
																	<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
																		<t t-if="application.first_name">
																			<t t-esc="application.name"/>
																		</t>
																		<t t-else="">N/A</t>
																	</td>
																	<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
																		<t t-if="application.first_name">
																			<t t-esc="application.create_date"/>
																		</t>
																		<t t-else="">N/A</t>
																	</td>
																	<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
																		<t t-if="application.first_name">
																			<t t-esc="application.status"/>
																		</t>
																		<t t-else="">N/A</t>
																	</td>
																	<td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
																		<t t-if="application.status == new">
																			<a t-att-href="'/' + agent.subdomain + '/application/' + application.name" t-att-class="'text-' + agent.agent_color + '-' + agent.agent_secondary_shade + ' hover:text-' + agent.agent_color + '-' + agent.agent_shade ">Delete</a>
																		</t>
																	</td>
																</tr>
															</t>
															<!-- More people... -->
														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</t>
						<t t-else="">
							<div id="emptyDashboard" class="py-6">
								<div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
									<h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
								</div>
								<div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
									<!-- Replace with your content -->
									<div class="py-4">
										<a t-att-href="'/' + agent.subdomain + '/application'"  class="relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
											<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto h-12 w-12 text-gray-400">
												<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
											</svg>

											<span class="mt-2 block text-sm font-medium text-gray-900">Start your application</span>
										</a>
									</div>
									<!-- /End replace -->
								</div>
							</div>
						</t>
					</main>
				</div>
			</div>


		</body>
	</template>
</odoo>