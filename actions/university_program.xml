<odoo>
    <data>

        <record id='hl_base_university_program_action_window' model='ir.actions.act_window'>
			<field name="name">University</field>
			<field name="res_model">university.program</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('university', '=', active_id)]</field>
			<field name="context">{'default_university': active_id}</field>
			<field name="limit">20</field>
		</record>

        <record id="hl_base_university_program_tree_view" model="ir.actions.act_window.view">
			<field name="act_window_id" ref="hl_base_university_program_action_window" />
			<field name="view_id" ref="hl_base_university_program_tree_view" />
			<field name="view_mode">tree</field>
			<field name="sequence" eval="1"/>
		</record>

		<record id="hl_base_university_program_form_view" model="ir.actions.act_window.view">
			<field name="act_window_id" ref="hl_base_university_program_action_window" />
			<field name="view_id" ref="hl_base_university_program_form_view" />
			<field name="view_mode">form</field>
			<field name="sequence" eval="3"/>
		</record>

    </data>
</odoo>